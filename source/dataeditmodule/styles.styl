// dataedit styles
#dataedit
    padding: bar-height 0
    box-sizing: border-box
    display: flex
    flex-direction: column

    background-color alpha(yellow, 0.9)
    position fixed
    top 0
    bottom 0
    transform translate(-102%)
    width 100%
    height 100vh
    text-align: center

#dataedit.present
    transform translate(0)


// slideinframe styles
bar-icon-size ?= 33px
bar-icon-padding ?= 7px 
bar-height ?= 2px + bar-icon-size + 2 * bar-icon-padding

element-background ?= black 
cd-background ?= black


.back-icon
    display: block
    margin-left auto
    height: bar-icon-size
    width bar-icon-size

.accept-icon
    display block
    margin-left auto
    height: bar-icon-size
    width bar-icon-size

.back-button
    background-color cd-background
    // background-color element-background
    position absolute
    padding bar-icon-padding + 1px (2 * bar-icon-padding)
    top: 0
    width 100%
    box-sizing: border-box
    cursor pointer

.accept-button
    background-color cd-background
    // background-color element-background
    position absolute
    bottom: 0
    width 100%
    padding bar-icon-padding + 1px (2 * bar-icon-padding)
    box-sizing: border-box
    cursor pointer

